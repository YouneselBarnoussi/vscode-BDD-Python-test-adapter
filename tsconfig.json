{
  "compilerOptions": {
    "target": "es2020",
    "lib": [ "es2020" ],
    "module": "commonjs",
    "outDir": "out",
    "importHelpers": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "skipLibCheck": true,
    "rootDir": "src",
  },
  "include": [
    "src/",
    "src/test/suite/support",
  ],
	"exclude": ["node_modules"]
}
  